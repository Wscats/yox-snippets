{
    "template": {
        "prefix": "template",
        "body": [
            "<template>",
            "\t<${1:div}$2>",
            "\t\t$0",
            "\t</${1:div}>",
            "</template>"
        ],
        "description": "template"
    },
    "mustache": {
        "prefix": "{{}}",
        "body": [
            "{{$1}}"
        ],
        "description": "mustache"
    },
    "mustacheComment": {
        "prefix": "{{!--}}",
        "body": [
            "{{!-- $1 --}}"
        ],
        "description": "mustache comment"
    },
    "event": {
        "prefix": [
            "on-event"
        ],
        "body": [
            "on-${1:event}=\"${2:handle}\""
        ],
        "description": "event"
    },
    "directive": {
        "prefix": [
            "o-directive"
        ],
        "body": [
            "o-${1:directive}=\"${2:handle}\""
        ],
        "description": "directive"
    },
    "transition": {
        "prefix": [
            "transition"
        ],
        "body": [
            "transition=\"${1:name}\""
        ],
        "description": "transition"
    },
    "if": {
        "prefix": "#if",
        "body": [
            "{{#if ${1:condition}}}",
            "\tA",
            "{{else if ${2:condition}}}",
            "\tB",
            "{{else}}",
            "\tC",
            "{{/if}}"
        ],
        "description": "if"
    },
    "each": {
        "prefix": "#each",
        "body": [
            "{{#each ${1:items}:${2:item}}}",
            "\t${3:item}",
            "{{/each}}"
        ],
        "description": "each"
    },
    "partial": {
        "prefix": "#partial",
        "body": [
            "{{#partial $1}}",
            "\t$2",
            "{{/partial}}"
        ],
        "description": "partial"
    },
    "model": {
        "prefix": "model",
        "body": [
            "model=\"$1\""
        ],
        "description": "model"
    },
    "singleLineComment": {
        "prefix": "<!--",
        "body": [
            "<!-- ${1:comment} -->"
        ],
        "description": "single line comment"
    },
    "multilineComment": {
        "prefix": "<!--",
        "body": [
            "<!--",
            "\t${1:comment}",
            "-->"
        ],
        "description": "multiline comment"
    }
}